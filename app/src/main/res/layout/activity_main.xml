<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.study.zhenqiangli.mr_basic_circular_reveal_effect.MainActivity">

    <!-- toolbar maximum size -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="168dp">
        <!-- drawing title -->
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="circular reveal and scroll event">
            <!-- drawing icons -->
            <android.support.v7.widget.Toolbar
                android:layout_height="56dp"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <!-- android:nestedScrollingEnabled="false" will disable scroll event for the tool bar -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>

</android.support.design.widget.CoordinatorLayout
   >
